@import "../template/template.wxss";
.weui-cell{
  width: 100%;
  height: 100rpx;
  border: 2rpx solid #f5f5f5;
  display: flex;
  align-items: center;
  position: relative;
}
.weui-cell .weui-input{
  width: 96%;
  height: 66rpx;
  border-radius: 33rpx;
  border: 2rpx solid #ccc;
  font-size: 28rpx;
  padding: 0 30rpx;
  margin: 0 2%;
}
.weui-cell .search-right{
  width: 45rpx;
  height: 40rpx;
  position: absolute;
  top: 50%;
  right: 5%;
  margin-top: -20rpx;
}
.category-content{
  width: 100%;
  display: flex;
}
.left-wrap{
  width: 25%;
  height: 100%;
  border-right: 2rpx solid #eee;
}
.left-wrap .left{
  width: 100%;
}
.left-wrap .left .left-item{
  width: 100%;
  height: 40rpx;
  font-size: 26rpx;
  line-height: 40rpx;
  text-align: center;
  margin: 18rpx 0;
}
.left-wrap .left .left-item.active{
  color: #f00;
  border-left: 4rpx solid #f00;
}
.right-wrap{
  width: 75%;
  height: 100%;
}