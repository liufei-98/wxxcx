.search-wrap{
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  position: relative;
}
.search-wrap input{
  width: 100%;
  height: 60rpx;
  border: 2rpx solid #ccc;
  font-size: 26rpx;
  border-radius: 30rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
}
.search-wrap .iconfont{
  position: absolute;
  top: 26rpx;
  right: 50rpx;
  font-size: 40rpx;
  color: #ccc;
}