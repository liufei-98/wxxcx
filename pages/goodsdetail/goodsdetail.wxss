/* pages/goodsdetail/goodsdetail.wxss */
.navbar{
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}
.navbar .goback{
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 50%;
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;

}
.navbar .navbar-title{
  width: 60%;
  display: flex;
  position: absolute;
  bottom: 0rpx;
  left: 70rpx;
}
.navbar .navbar-title .navbar-item{
  width: 25%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 26rpx;
  text-align: center;
  color: #666;
}
.navbar .navbar-title .active{
  color: #f00;
  border-bottom:4rpx solid #f00;
}
.detail-swiper{
  width: 100%;
  height: 818rpx;
}
.detail-swiper .detail-swiper-item image{
  width: 100%;
  height: 100%;
}
.delail-price{
  width: 100%;
  background: #fff;
  padding: 22rpx 22rpx 16rpx;
  box-sizing: border-box;
}
.delail-price .price{
  font-size: 40rpx;
  color: #f00;
  font-weight: 700;
}
.delail-price .price::before{
  content: "￥";
  font-size: 30rpx;
}
.delail-price .dprice{
  font-size: 28rpx;
  color: #999;
  margin-left: 20rpx;
  text-decoration: line-through;
}
.delail-price .dprice::before{
  content: "￥";
}
.detail-title{
  width: 100%;
  background: #fff;
  margin-top: 20rpx;
}
.detail-title .title{
  width: 100%;
  padding: 20rpx 20rpx 0;
  margin-bottom:20rpx ;
  box-sizing: border-box;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.detail-title .goods-info{
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  border-top: 1rpx solid #eee;
}
.detail-title .goods-info view{
  font-size: 26rpx;
  color: #999;
}
.detail-serve{
  width: 100%;
  margin-top: 20rpx;
  background: #fff;
}
.detail-serve view{
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  color: #333;
}
.detail-serve .integral{
  border-bottom: 1rpx solid #eee;
}
.detail-serve view text{
  color: #999;
}
.detail-carriage{
  width: 100%;
  margin-top: 20rpx;
  background: #fff;
}
.detail-carriage .site-wrap{
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #eee;
  position: relative;
}
.detail-carriage .site-wrap .site{
  font-size: 26rpx;
  color: #333;
}
.detail-carriage .site-wrap .site text{
  color: #999;
}
.detail-carriage .site-wrap .iconfont{
  position: absolute;
  top: 24rpx;
  right: 20rpx;
  color: #999;
  font-size: 30rpx;
}
.detail-carriage .carriage{
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  color: #333;
}
.detail-carriage .carriage text{
  color: #999;
}
.detail-select{
  width: 100%;
  background: #fff;
  margin-top: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
  position: relative;
}
.detail-select .select{
  font-size: 26rpx;
  color: #333;
}
.detail-select .select text{
  color: #999;
}
.detail-select .iconfont{
  position: absolute;
  top: 24rpx;
  right: 20rpx;
  color: #999;
  font-size: 30rpx;
}


.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  background: rgba(0,0, 0, 0.8);
}
.screen-wrap{
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 200;
  background: #fff;
}
.screen-wrap .screen-info-wrap{
  width: 100%;
  height: 190rpx;
  padding: 20rpx;
  box-sizing: border-box;
  position: relative;
  display: flex;
}
.screen-wrap .screen-info-wrap image{
  width: 25%;
  height: 184rpx;
  border-radius: 10rpx;
  overflow: hidden;
  transform: translateY(-80rpx);
  box-shadow: 2px 2px 15px rgba(46,58,76,.17)!important;
}
.screen-wrap .screen-info-wrap .screen-info{
  width: 70%;
  padding: 0 20rpx;
  box-sizing: border-box;
  height: 150rpx;
}
.screen-wrap .screen-info-wrap .screen-info .title{
  font-size: 26rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.screen-wrap .screen-info-wrap .screen-info .price{
  font-size: 28rpx;
  color: #f00;
  padding: 7rpx 0;
  font-weight: 600;
}
.screen-wrap .screen-info-wrap .screen-info .kucun{
  font-size: 24rpx;
  color: #888;
}
.screen-wrap .screen-info-wrap .iconfont{
  width: 5%;
}
.screen-wrap .screen-num{
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}
.screen-wrap .screen-num .num{
  font-size: 28rpx;
  color: #888;
}
.screen-wrap .screen-num .changenum{
  display: flex;
}
.screen-wrap .screen-num .changenum button{
  width: 50rpx;
  height: 50rpx;
  padding: 0;
  text-align: center;
  line-height: 50rpx;
}
.screen-wrap .screen-num .changenum input{
  width: 100rpx;
  height: 50rpx;
  border: 2rpx solid #f4f4f4;
  font-size: 26rpx;
  text-align: center;
  line-height: 50rpx;
  box-sizing: border-box;
}
.screen-wrap .screen-buy{
  width: 100%;
  height: 100rpx;
  display: flex;
}
.screen-wrap .screen-buy button{
  width: 50%;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  line-height: 100rpx;
  border: 0;
  border-radius: 0;
}
.screen-wrap .screen-buy .buy-btn{
  background: #fba534;
}
.screen-wrap .screen-buy .buy-car{
  background: #f92028;
}
.goods-detail-header{
  width: 100%;
  height: 100rpx;
  line-height: 60rpx;
  margin-top: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
  text-align: center;
  font-size: 28rpx;
  background: #fff;
  border-bottom: 2rpx solid #f4f4f4;
}
.guess-like{
  width: 100%;
  padding: 20rpx;
  font-size: 28rpx;
  color: #888;
  box-sizing: border-box;
  text-align: center;
}
.index-content-wrap{
  width: 96%;
  margin: 0 2%;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
}
.index-content-wrap .index-content-goods{
  width: 49%;
  height: 520rpx;
  margin: 20rpx 0 0;
  border-radius: 20rpx;
  float: left;
  background: #fff;
  overflow: hidden;
}
.index-content-wrap .index-content-goods image{
  width: 100%;
  height: 320rpx;
}
.index-content-wrap .index-content-goods .title{
  width: 90%;
  margin: 0 5%;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.index-content-wrap .index-content-goods .price{
  width: 90%;
  margin: 20rpx 5% 0;
  color: #f44;
  font-weight: 900;
}

.footer-wrap{
  width: 100%;
  height: 100rpx;
  background: #fff;
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 50;
  border-top: 2rpx solid #eee;
}
.footer-wrap .footer-item{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  font-size: 24rpx;
  position: relative;
  border-right: 2rpx solid #efefef;
}
.footer-wrap .footer-item .iconfont{
  font-size: 50rpx;
}
.footer-wrap .footer-item.addcart{
  flex: 2;
  background: #f44;
  color: #fff;
  font-size: 28rpx;
  border: 2rpx solid #f44;
}
.footer-wrap .footer-item.nowbuy{
  flex: 2;
  background: #ff976a;
  color: #fff;
  font-size: 28rpx;
  border: 2rpx solid #ff976a;
}
.footer-wrap .footer-item .cartnum{
  min-width: 30rpx;
  height: 30rpx;
  background: #f00;
  border-radius: 15rpx;
  color: #fff;
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  padding: 5rpx;
  text-align: center;
  line-height: 30rpx;
}
.footer-wrap .footer-item .kf{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
}